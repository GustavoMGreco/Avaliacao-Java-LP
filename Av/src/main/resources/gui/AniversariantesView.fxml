<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AniversariantesController" stylesheets="@application.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Aniversariantes do Mês" styleClass="titulo"/>

    <Label text="Mães que celebram a vida neste mês:" textFill="#666666"/>

    <TableView fx:id="tabelaAniversariantes" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNome" text="Nome" prefWidth="250"/>
            <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="150"/>
            <TableColumn fx:id="colNascimento" text="Data de Nascimento" prefWidth="150"/>
            <TableColumn fx:id="colEndereco" text="Endereço" prefWidth="200"/>
        </columns>
        <placeholder>
            <Label text="Nenhuma aniversariante encontrada neste mês."/>
        </placeholder>
    </TableView>
</VBox>